<h1>New Line Item</h1>
<%= form_for [@order, @line_item], html: {class: "form-horizontal"} do |f| %>
  <%#= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <%=f.label :product_id, "PRODUCT", class: "col-md-2 control-label" %>
		<div class="col-md-3">
			<%= f.collection_select :product_id, Product.all, :id, :name, {prompt: "Select a product"}, {class: "form-control"} %>
		</div>
		<%= render partial: "shared/validation_error_message_first",
		 locals: { err_msgs: @line_item.errors[:product_id], attr_name: "Product" }%>		
  </div>
  <div class="form-group">
    <%= f.label :quantity, "QUANTITY", class: "col-md-2 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :quantity, class: "form-control" %>
		</div>
		<%= render partial: "shared/validation_error_message_first",
		 locals: { err_msgs: @line_item.errors[:quantity], attr_name: "Quantity" }%>		
  </div>
  <div class="form-group">
    <%= f.label :discount_percent, "DISCOUNT (0-100)", class: "col-md-2 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :discount_percent, class: "form-control" %>
		</div>
		<%= render partial: "shared/validation_error_message_first",
		 locals: { err_msgs: @line_item.errors[:discount_percent], attr_name: "Discount" }%>		
  </div>

  <%= f.submit class: "btn btn-default" %>
	 
	<%= link_to "Back to Order", order_path(@order), class: "btn btn-default" %>

<% end %>
