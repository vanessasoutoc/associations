<h1>Edit Line Item</h1>
<%= form_for @line_item, html: {class: "form-horizontal"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <%=f.label :product_id, "PRODUCT", class: "col-md-2 control-label" %>
		<div class="col-md-3">
			<%= f.collection_select :product_id, Product.all, :id, :name, {prompt: "Select a product"}, {class: "form-control"} %>
		</div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, "QUANTITY", class: "col-md-2 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :quantity, class: "form-control" %>
		</div>
  </div>
  <div class="form-group">
    <%= f.label :discount_percent, "DISCOUNT (0-100)", class: "col-md-2 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :discount_percent, class: "form-control" %>
		</div>
  </div>

  <%= f.submit class: "btn btn-default" %>
	 
	<%= link_to "Back to Order", order_path(@line_item.order_id), class: "btn btn-default" %>

<% end %>
