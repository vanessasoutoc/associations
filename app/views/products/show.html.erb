<div class="row">
	<div class="col-md-6">
		<h1>Product</h1>
		<table class="table table-bordered">
			<tr>
				<td class="field-label col-md-2 active text-right"><label>NAME</label></td>
				<td class="col-md-4"><%= @product.name %></td>
			</tr>
			<tr>
				<td class="field-label col-md-2 active text-right"><label>DESCRIPTION</label></td>
				<td class="col-md-4"><%= @product.description %></td>
			</tr>
			<tr>
				<td class="field-label col-md-2 active text-right"><label>UPC</label></td>
				<td class="col-md-4"><%= @product.upc %></td>
			</tr>
			<tr>
				<td class="field-label col-md-2 active text-right"><label>UNIT PRICE</label></td>
				<td class="col-md-4"><%= number_to_currency(@product.unit_price, unit: "") %></td>
			</tr>
			<tr>
				<td class="field-label col-md-2 active text-right"><label>INVENTORY QUANTITY</label></td>
				<td class="col-md-4"><%= @product.inventory_qty %></td>
			</tr>
		</table>
	</div>
</div>	<!-- .row -->
 
<br>
<%= link_to "Edit", edit_product_path(@product), class: "btn btn-default" %> 
<%= link_to "Back to Product List", products_path, class: "btn btn-default" %>
