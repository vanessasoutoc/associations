<h1>New Order</h1>
<%= form_for [@customer, @order], html: {class: "form-horizontal"} do |f| %>
	<%#= render "shared/error_messages", object: f.object %>

	<div class="form-group">
		<%=f.label :description, "DESCRIPTION", class: "col-md-2 control-label" %>
		<div class="col-md-4">
			<%= f.text_field :description, class: "form-control" %>
		</div>
		<%= render partial: "shared/validation_error_message_first",
		 locals: { err_msgs: @order.errors[:description], attr_name: "Description" }%>
	</div>
	<div class="form-group">
		<%= f.label :date, "DATE", class: "col-md-2 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :date, id: "datepicker", class: "form-control",
			 value: @order.date.nil? ? @order.date : @order.date.strftime("%-m/%-d/%Y"),
			 readonly: true %>
		</div>
		<div class="col-md-2 control-label">
			<div>(click date for calendar)</div>
		</div>
		<%= render partial: "shared/validation_error_message_first",
		 locals: { err_msgs: @order.errors[:date], attr_name: "Date" }%>
	</div>

	<%= f.submit class: "btn btn-default" %>
	 
	<%= link_to "Back to Customer", customer_path(@customer), class: "btn btn-default" %>

<% end %>
