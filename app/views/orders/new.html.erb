<h1>Create Order</h1>
<%= form_for [@customer, @order], html: {class: "form-horizontal"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <%=f.label :description, "DESCRIPTION", class: "col-md-2 control-label" %>
		<div class="col-md-4">
			<%= f.text_field :description, class: "form-control" %>
		</div>
  </div>
  <div class="form-group">
    <%= f.label :date, "DATE", class: "col-md-2 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :date, id: "datepicker", class: "form-control", readonly: true %>
		</div>
		<div class="col-md-2 control-label">
			<div>(click date for calendar)</div>
		</div>
  </div>
  <div class="form-group">
    <%= f.label :total, "TOTAL", class: "col-md-2 control-label" %>
		<div class="col-md-4">
			<%= f.text_field :total, class: "form-control" %>
		</div>
  </div>

  <%= f.submit class: "btn btn-default" %>
	 
	<%= link_to "Back to Customer", customer_path(@customer), class: "btn btn-default" %>

<% end %>
