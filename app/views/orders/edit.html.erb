<h1>Edit Order</h1>
<%= form_for @order, html: {class: "form-horizontal"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <%=f.label :name, "NAME", class: "col-md-2 control-label" %>
		<div class="col-md-4">
			<%= f.text_field :name, class: "form-control" %>
		</div>
  </div>
  <div class="form-group">
    <%= f.label :date, "DATE", class: "col-md-2 control-label" %>
		<div class="col-md-4">
			<%= f.text_field :date, class: "form-control" %>
		</div>
  </div>
  <div class="form-group">
    <%= f.label :total, "TOTAL", class: "col-md-2 control-label" %>
		<div class="col-md-4">
			<%= f.text_field :total, class: "form-control datepicker" %>
		</div>
  </div>

  <h3>NOTE: Update functionality under construction.</h3>

  <%#= f.submit class: "btn btn-default" %>
	 
	<%= link_to "Cancel", customers_path, class: "btn btn-default" %>

<% end %>
