<!DOCTYPE html>
<html>
<head>
  <title>Associations</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render "layouts/shim" %>
</head>
<body>

  <!-- Static navbar -->
  <div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Associations", root_path, class: "navbar-brand" %>
      </div>

      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <% if signed_in? %>
            <li class="<%= 'active' if params[:controller] == 'customers' %>">
            	<%= link_to "Customers", customers_path %>
            </li>
            <% if current_user.admin? %>
              <li class="<%= 'active' if params[:controller] == 'users' %>">
              	<%= link_to "Users", users_path %>
              </li>
            <% end %>
          <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li class="<%= 'active' if params[:controller] == 'static_pages' && params[:action] == 'about' %>">
          	<%= link_to "About", about_path %>
          </li>
          <li class="<%= 'active' if params[:controller] == 'static_pages' && params[:action] == 'contact' %>">
          	<%= link_to "Contact", contact_path %>
          </li>

          <% if signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hi <%= current_user.name %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Sign Out", signout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li class="<%= 'active' if params[:controller] == 'sessions' && params[:action] == 'new' %>">
              <%= link_to "Sign In", signin_path %>
            </li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>

	<div class="container">
		<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>"><%= value %></div>
		<% end %>
		<%= yield %>
		<%= debug(params) if Rails.env.development? %>
	</div>
</body>
</html>
