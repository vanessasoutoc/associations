<h1>Users</h1>
<%= link_to "Add User", new_user_path, class: "btn btn-default" %>
<br>
<br>
<table class="table table-striped table-bordered">
  <tr class="head-row">
    <th>NAME</th>
    <th>EMAIL</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to "Show", user %></td>
    <td><%= link_to "Edit", edit_user_path(user) %></td>
    <td><%= link_to "Delete", user, method: :delete, data: { confirm: "Delete this user?" } %></td>
  </tr>
<% end %>
</table>
